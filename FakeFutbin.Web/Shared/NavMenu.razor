@implements IDisposable
@inject IScoutService scoutService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""><span class="fas fa-shopping-cart" aria-hidden="true"></span>&nbsp;FakeFutbin</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="fas fa-home" aria-hidden="true"></span>&nbsp;Home
            </NavLink>
        </div>

            <PlayerNationalitiesNavMenu/>

        <div class="nav-item px-3 d-sm-none">
            <NavLink class="nav-link" href="Scout">
                <span class="fas fa-shopping-cart" aria-hidden="true"></span>&nbsp;Scout (<b>@scoutPlayersCount</b>)
            </NavLink>
        </div>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private int scoutPlayersCount = 0;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override void OnInitialized()
    {
        scoutService.OnScoutChanged += ScoutChanged;
    }
    private void ScoutChanged(int totalQty)
    {
        scoutPlayersCount = totalQty;
        StateHasChanged();
    }
    void IDisposable.Dispose()
    {
        scoutService.OnScoutChanged -= ScoutChanged;
    }

}
