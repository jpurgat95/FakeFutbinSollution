@page "/PlayerDetails/{Id:int}"
@inherits PlayerDetailsBase

@if (Player == null && ErrorMessage == null)
{
    <DisplaySpinner/>
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h3 class="mb-5 text-center"><b>Player Details</b></h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Player.ImageURL">
        </div>
        <div class="col-md-6">
            <h3><b>@Player.Name</b></h3>
            <p class="mb-2">Age: @Player.Age</p>
            <p class="mb-2">Raiting: @Player.Raiting</p>
            <p class="mb-2">Position: @Player.Position</p>
            <p class="mb-2">
                <b> @Player.MarketValue.ToString("C")&nbsp;(@Player.Qty players on market)</b>
            </p>
            <div>
                <a href="/Scout" class="btn btn-success" 
                @onclick ="() => (AddToScout_Click(new ScoutPlayerToAddDto{
                    ScoutId = HardCoded.ScoutId,
                    PlayerId = Player.Id,
                    Qty = 1
                }))"
                ><b>Add to Scout List</b></a>
            </div>
        </div>
    </div>

}