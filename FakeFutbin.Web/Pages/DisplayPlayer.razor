@inherits DisplayPlayerBase

@foreach(var player in Players)
{
    <div class="col-md-3 mb-2">
        <a href="/PlayerDetails/@player.Id">
            <div class="card">
                <img class="img-thumbnail" src="@player.ImageURL">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @player.Name
                    </h5>
                    <p class="card-text">
                        <b>@player.MarketValue.ToString("C")</b>
                    </p>
                </div>
            </div>
        </a>
    </div>
}